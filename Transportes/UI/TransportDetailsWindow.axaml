<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Transportes.UI.TransportDetailsWindow"
        Title="Detalles del Transporte" Width="400" Height="600">
    <StackPanel Margin="20">
        <TextBlock Text="Detalles del Transporte" FontSize="18" FontWeight="Bold" Margin="0,0,0,10" />
        <TextBlock Text="ID:" />
        <TextBlock Name="IdTextBlock" Margin="0,0,0,10" />
        <TextBlock Text="Tipo:" />
        <TextBlock Name="TipoTextBlock" Margin="0,0,0,10" />
        <TextBlock Text="Cliente:" />
        <TextBlock Name="ClienteTextBlock" Margin="0,0,0,10" />
        <TextBlock Text="Vehículo:" />
        <TextBlock Name="VehiculoTextBlock" Margin="0,0,0,10" />
        <TextBlock Text="Fecha de Contratación:" />
        <TextBlock Name="FechaContratacionTextBlock" Margin="0,0,0,10" />
        <TextBlock Text="Fecha de Salida:" />
        <TextBlock Name="FechaSalidaTextBlock" Margin="0,0,0,10" />
        <TextBlock Text="Fecha de Entrega:" />
        <TextBlock Name="FechaEntregaTextBlock" Margin="0,0,0,10" />
        <TextBlock Text="Kilómetros Recorridos:" />
        <TextBlock Name="KilometrosTextBlock" Margin="0,0,0,10" />
        <TextBlock Text="Importe por Día:" />
        <TextBlock Name="ImportePorDiaTextBlock" Margin="0,0,0,10" />
        <TextBlock Text="Importe por Kilómetro:" />
        <TextBlock Name="ImportePorKilometroTextBlock" Margin="0,0,0,10" />
        <TextBlock Text="IVA Aplicado:" />
        <TextBlock Name="IvaTextBlock" Margin="0,0,0,10" />
        <TextBlock Text="Total con IVA:" />
        <TextBlock Name="TotalConIvaTextBlock" Margin="0,0,0,20" />
        <Button Name="GenerateInvoiceButton" Content="Generar Factura" Margin="0,0,0,10" />
        <Button Name="DeleteButton" Content="Eliminar Transporte" Background="Red" Foreground="White" Margin="0,0,0,10" />
        <Button Name="ModifyButton" Content="Modificar Transporte" Margin="0,0,0,10" />
        <Button Name="CloseButton" Content="Cerrar" />
    </StackPanel>
</Window>
