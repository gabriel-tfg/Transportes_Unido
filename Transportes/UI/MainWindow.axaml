<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Transportes.MainWindow"
        Title="Transportes"
        Width="1000" Height="700">

    <Grid>
        <!-- Definici칩n de filas y columnas principales -->
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/> <!-- Barra superior -->
            <RowDefinition Height="1"/>  <!-- L칤nea divisoria -->
            <RowDefinition Height="*"/> <!-- Contenido principal -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/> <!-- Principal -->
            <ColumnDefinition Width="1*"/> <!-- Filtros -->
        </Grid.ColumnDefinitions>

        <!-- Barra superior -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Background="#D3D3D3" VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="30">
            <Button x:Name="ClientesButton" Content="Clientes" Width="100" Height="30"/>
            <Button x:Name="FlotaButton" Content="Flota" Width="100" Height="30"/>
            <Button x:Name="DatosButton" Content="Datos" Width="100" Height="30"/>
            <Button x:Name="TransportesButton" Content="Transportes" Width="120" Height="30"/>
            <Button x:Name="GraficosButton" Content="Gr치ficos" Width="100" Height="30"/>
        </StackPanel>

        <!-- L칤nea divisoria -->
        <Border Grid.Row="1" Grid.ColumnSpan="2" Background="#000" Height="1"/>

        <!-- Contenido principal -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" /> <!-- Tabla -->
                <ColumnDefinition Width="200" /> <!-- 츼rea de filtros -->
            </Grid.ColumnDefinitions>

            <!-- Parte izquierda (tabla y controles) -->
            <StackPanel Grid.Column="0" Margin="10">
                <!-- Barra de b칰squeda -->
                <StackPanel Orientation="Horizontal" Spacing="10" Margin="0 0 0 10">
                    <Button x:Name="ConsultTransportButton" Content="游댌 Buscar" Background="#007BFF" Foreground="White" Width="100" Height="30"/>
                    <Button x:Name="AddTransportButton" Content="+ A침adir" HorizontalAlignment="Left" VerticalAlignment="Top" />

                </StackPanel>

                <!-- DataGrid para la lista de transportes -->
                <DataGrid x:Name="Dgrid"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          RowBackground="#F9FAFB"
                          Foreground="#1F2937"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto"
                          CanUserResizeColumns="True"
                          Background="#FFFFFF"
                          Margin="0 10 0 0"
                          Height="500">
                    <DataGrid.Columns>
                        <!-- ID -->
                        <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="200"/>
                        <!-- Tipo de Transporte -->
                        <DataGridTextColumn Header="Tipo" Binding="{Binding Tipo}" Width="200"/>
                        <!-- Cliente -->
                        <DataGridTextColumn Header="Cliente" Binding="{Binding Cliente.Nombre}" Width="200"/>
                        <!-- Veh칤culo -->
                        <DataGridTextColumn Header="Veh칤culo" Binding="{Binding Vehiculo.Tipo}" Width="200"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>

            <!-- Parte derecha (filtros) -->
            <Border Grid.Column="1" Background="#C0C0C0" Padding="10"> <!-- Fondo gris m치s oscuro -->
                <StackPanel>
                    <TextBlock Text="Filtros" FontSize="18" FontWeight="Bold" Margin="0 0 0 10"/>
                    <!-- Controles para los filtros -->
                    <TextBlock Text="Por tipo:" FontSize="14" Margin="0 5"/>
                    <ComboBox x:Name="TipoFiltroComboBox" Width="150" Margin="0 5"/>
                    
                    <TextBlock Text="Por cliente:" FontSize="14" Margin="0 5"/>
                    <TextBox x:Name="ClienteFiltroTextBox" Width="150" Margin="0 5"/>
                    
                    <Button Content="Aplicar Filtros" Background="#007BFF" Foreground="White" Width="150" Height="30" Margin="0 10"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>

