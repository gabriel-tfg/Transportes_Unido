<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Transportes.UI.GenerateInvoiceWindow"
        Title="Generar Factura"
        Width="500" Height="450"
        Background="#FEF7E3">
    <StackPanel Margin="20">
        <TextBlock Text="Generar Factura" FontSize="26" FontWeight="Bold" Foreground="#1D3557" Margin="0,0,0,20" HorizontalAlignment="Center"/>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Precio del Combustible (€):" Width="200" VerticalAlignment="Center" Foreground="#1D3557"/>
            <TextBox x:Name="FuelPriceTextBox" Width="200" Background="#B0BEC5" Foreground="White" CornerRadius="10"/>
        </StackPanel>

        <Button x:Name="GenerateButton" Content="Generar Factura" Width="150" Background="#48B9A3" Foreground="White" Margin="0,20" HorizontalAlignment="Center"/>

        <Border BorderBrush="#E5E7EB" BorderThickness="1" CornerRadius="10" Padding="10">
            <ScrollViewer>
                <TextBlock x:Name="InvoiceTextBlock" FontSize="14" TextWrapping="Wrap" Margin="10" Foreground="#1F2937"/>
            </ScrollViewer>
        </Border>
    </StackPanel>
</Window>