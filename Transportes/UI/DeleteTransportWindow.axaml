<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Transportes.UI.DeleteTransportWindow"
        Title="Eliminar Transporte"
        Width="400" Height="200"
        Background="#F0F4F8">
    <StackPanel Margin="20" Spacing="10">
        <TextBlock Text="Eliminar Transporte" FontSize="24" FontWeight="Bold" Foreground="#DC2626" HorizontalAlignment="Center"/>

        <TextBlock Text="¿Está seguro de que desea eliminar este transporte?" FontSize="16" FontWeight="Medium" Foreground="#6B7280" TextAlignment="Center"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10" Margin="10">
            <Button x:Name="ConfirmButton" Content="Sí" Width="80" Background="#EF4444" Foreground="White"/>
            <Button x:Name="CancelButton" Content="No" Width="80" Background="#6B7280" Foreground="White"/>
        </StackPanel>
    </StackPanel>
</Window>