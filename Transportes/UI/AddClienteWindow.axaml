<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Transportes.UI.AddClienteWindow"
        Title="Añadir Transporte" Width="700" Height="750"
        Background="#F0F4F8">
    <DockPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" HorizontalAlignment="Center">
            <Button Name="BtCancel" Margin="20">
                <Image Width="15" Height="15" Source="/Res/cancel.png"/>
            </Button> 
            <Button Name="BtOk" Margin="10">
                <Image Width="15" Height="15" Source="/Res/add.png"/>
            </Button>       
        </StackPanel>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" Margin="10">
            <TextBlock HorizontalAlignment="Center" >Rellena los datos del Cliente: </TextBlock>
            <Label Content="NIF"/>
            <TextBox Name = "EdNif"/>
            <Label Content="Nombre"/>
            <TextBox Name = "EdNom"/>
            <Label Content="Telefono"/>
            <TextBox Name = "EdTel"/>
            <Label Content ="Email"/>
            <TextBox Name = "EdEmail"/>
            <Label Content ="Direccion Postal"/>
            <TextBox Name = "EdDir"/>
        </StackPanel>
    </DockPanel>
</Window>
