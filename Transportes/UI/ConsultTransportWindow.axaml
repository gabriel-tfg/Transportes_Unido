<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Transportes.UI.ConsultTransportWindow"
        Title="Consultar Transporte"
        Width="600" Height="500"
        Background="#FEF7E3">
    <StackPanel Margin="20">
        <TextBlock Text="Consultar Transporte" FontSize="26" FontWeight="Bold" Foreground="#1D3557" Margin="0,0,0,20" HorizontalAlignment="Center"/>

        <StackPanel Margin="0,10">
            <TextBlock Text="ID del Transporte" FontWeight="Bold" Foreground="#1D3557"/>
            <TextBox x:Name="TransportIdTextBox" Watermark="Introduce el ID del transporte" Width="300" Background="#B0BEC5" Foreground="Black"/>
        </StackPanel>

        <Button x:Name="ConsultButton" Content="Consultar" Width="150" Background="#48B9A3" Foreground="White" Margin="0,20" HorizontalAlignment="Center"/>

        <TextBlock x:Name="StatusTextBlock" Text="Estado" FontSize="16" FontWeight="Bold" Margin="0,10,0,20" Foreground="#1D3557" HorizontalAlignment="Center"/>

        <Border BorderBrush="#E5E7EB" BorderThickness="1" CornerRadius="10" Padding="10">
            <ScrollViewer Height="200">
                <DataGrid x:Name="TransportDataGrid"
                          AutoGenerateColumns="False"
                          IsReadOnly="False"
                          CanUserResizeColumns="True"
                          CanUserSortColumns="True"
                          RowBackground="#FFFFFF"
                          Foreground="#1F2937"
                          Background="#FFFFFF">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="*"/>
                        <DataGridTextColumn Header="Tipo Transporte" Binding="{Binding Tipo}" Width="*"/>
                        <DataGridTextColumn Header="Cliente (Nombre)" Binding="{Binding Cliente.Nombre}" Width="*"/>
                        <DataGridTextColumn Header="Fecha Contratación" Binding="{Binding FechaContratacion, StringFormat='dd/MM/yyyy'}" Width="*"/>
                        <DataGridTextColumn Header="Fecha Salida" Binding="{Binding FechaSalida, StringFormat='dd/MM/yyyy'}" Width="*"/>
                        <DataGridTextColumn Header="Fecha Entrega" Binding="{Binding FechaEntrega, StringFormat='dd/MM/yyyy'}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </ScrollViewer>
        </Border>
    </StackPanel>
</Window>
