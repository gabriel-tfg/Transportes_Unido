<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Transportes.UI.ClienteDetailWindow"
        Title="Información detallada"
        Background="Cornsilk">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
         <!-- Panel de información -->
        <Border Grid.Row="0" Grid.ColumnSpan="2" Margin="10" Padding="10" Background="White" CornerRadius="10"
                BorderBrush="#CCCCCC" BorderThickness="1">
            <ScrollViewer>
                <StackPanel>
                    <TextBlock Text="Detalles del Cliente" FontWeight="Bold" FontSize="16" Foreground="#374151"
                               Margin="0,0,0,10" />

                    <TextBlock Text="NIF:" FontWeight="Bold" Foreground="#1F2937" />
                    <TextBox Text="{Binding Nif}" Name="EdNif" Margin="0,0,0,10" Foreground="#4B5563" IsEnabled="False"  />

                    <TextBlock Text="Nombre:" FontWeight="Bold" Foreground="#1F2937" />
                    <TextBox Text="{Binding Nombre}" Name="EdNom" Margin="0,0,0,10"
                             Foreground="#4B5563" IsEnabled="False"/>

                    <TextBlock Text="Telefono:" FontWeight="Bold" Foreground="#1F2937" />
                    <TextBox Text="{Binding Telefono}" Name="EdTel" Margin="0,0,0,10"
                             Foreground="#4B5563" IsEnabled="False" />

                    <TextBlock Text="Email:" FontWeight="Bold" Foreground="#1F2937" />
                    <TextBox Text="{Binding Email}" Name="EdEmail" Margin="0,0,0,10"
                             Foreground="#4B5563" IsEnabled="False"/>

                    <TextBlock Text="Direccion Postal:" FontWeight="Bold" Foreground="#1F2937" />
                    <TextBox Text="{Binding DireccionPostal}" Name="EdDir" 
                             Margin="0,0,0,10" Foreground="#4B5563" IsEnabled="False"/>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Botones de acción -->
        <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10"
                    Spacing="5">
            <Button Name="BtSave" Content="Editar" Padding="10,5" Background="#059669" Foreground="#FFFFFF" CornerRadius="5" />

            <Button Name="BtBorrar" Content="Eliminar" Padding="10,5" Background="#DC2626" Foreground="#FFFFFF"
                    CornerRadius="5">
                <Button.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="¿Estás seguro?" Command="{Binding ConfirmarEliminarCommand}" />
                    </ContextMenu>
                </Button.ContextMenu>
            </Button>
        </StackPanel>
    </Grid>
</Window>
        

