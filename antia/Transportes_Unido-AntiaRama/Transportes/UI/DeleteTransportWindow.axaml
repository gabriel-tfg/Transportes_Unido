<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Transportes.UI.DeleteTransportWindow"
        Title="Eliminar Transporte"
        Width="400" Height="250"
        Background="#F0F4F8">
    <StackPanel Margin="20">
        <TextBlock Text="Eliminar Transporte" FontSize="24" FontWeight="Bold" Foreground="#DC2626" Margin="0,0,0,20" HorizontalAlignment="Center"/>

        <StackPanel Margin="0,10">
            <TextBlock Text="ID del Transporte" FontWeight="Bold" Foreground="#6B7280"/>
            <TextBox x:Name="TransportIdTextBox" Watermark="Introduce el ID del transporte" Width="300" Background="White" Foreground="#1F2937"/>
        </StackPanel>

        <Button x:Name="DeleteButton" Content="Eliminar" Width="150" Background="#EF4444" Foreground="White" Margin="0,20" HorizontalAlignment="Center"/>
        <TextBlock x:Name="StatusTextBlock" Text="Estado" FontSize="16" FontWeight="Bold" Margin="0,10" Foreground="#6B7280" HorizontalAlignment="Center"/>
    </StackPanel>
</Window>